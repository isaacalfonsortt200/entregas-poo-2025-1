def test_suma():
    """Test unitario para verificar la suma de dos matrices."""
    m1 = Matriz([[1, 2], [3, 4]])
    m2 = Matriz([[5, 6], [7, 8]])
    resultado = m1 + m2
    assert resultado.valores == [[6, 8], [10, 12]], "Error en la suma de matrices"
    print("âœ… Test de suma: OK")


if __name__ == "__main__":
    # Ejecutar test antes del programa principal
    test_suma()
    main()
